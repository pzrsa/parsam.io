---
import Layout from "../components/Layout.astro";
import { getBlogPosts } from "../data/utils";

const posts = await getBlogPosts();

const rssSVG = `
<svg role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="#ff4f00">
  <title>RSS</title>
  <path d="M19.199 24C19.199 13.467 10.533 4.8 0 4.8V0c13.165 0 24 10.835 24 24h-4.801zM3.291 17.415c1.814 0 3.293 1.479 3.293 3.295 0 1.813-1.485 3.29-3.301 3.29C1.47 24 0 22.526 0 20.71s1.475-3.294 3.291-3.295zM15.909 24h-4.665c0-6.169-5.075-11.245-11.244-11.245V8.09c8.727 0 15.909 7.184 15.909 15.91z"/>
</svg>`;
---

<Layout title="Blog" image={new URL("og/blog.png", Astro.url)}>
  <span class="flex gap-1 items-baseline">
    <span class="flex-1">
      <h1 class="text-2xl font-bold mb-6">Blog</h1>
    </span>
    <a href="/rss.xml">
      <span set:html={rssSVG} />
    </a>
  </span>
  <ul class="flex flex-col gap-2">
    {
      posts.map((post, i) => {
        const year = post.data.date.getFullYear();
        const firstForYear =
          !posts[i - 1] || posts[i - 1].data.date.getFullYear() !== year;
        const lastForYear =
          !posts[i + 1] || posts[i + 1].data.date.getFullYear() !== year;

        return (
          <li>
            {firstForYear && (
              <span class="font-bold flex justify-end mb-3">{year}</span>
            )}
            <span
              class={`flex items-center gap-1 ${lastForYear ? "mb-4" : ""}`}
            >
              <span class="flex-1">
                <a href={`/${post.id}`}>
                  <span class="font-bold font-serif text-lg">
                    {post.data.title}
                  </span>
                  {post.data.author && <span> ({post.data.author})</span>}
                </a>
              </span>
              <span>
                {post.data.date.toLocaleDateString("en-GB", {
                  day: "numeric",
                  month: "short",
                })}
              </span>
            </span>
          </li>
        );
      })
    }
  </ul>
</Layout>
