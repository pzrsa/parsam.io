---
import explicit from "../assets/explicit.png";
import missing from "../assets/missing.png";

let data = null;
let error = false;

try {
  const res = await fetch(new URL("/api/now-playing", Astro.url));
  if (!res.ok) throw new Error("bad status");
  data = await res.json();
} catch {
  error = true;
}

const spotifySVG = `
<svg role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="#1DB954">
  <title>Spotify</title>
  <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
</svg>`;
---

{!error && !data && <p>loading...</p>}

{
  error || !data?.isPlaying ? (
    <div class="flex flex-row items-center gap-4 mb-6">
      <a
        href="https://open.spotify.com/user/e4ebkdi70a4wu03jwbwrglzhk"
        target="_blank"
      >
        <img
          src={missing.src}
          height={111}
          width={111}
          loading="eager"
          decoding="async"
        />
      </a>
      <a
        href="https://open.spotify.com/user/e4ebkdi70a4wu03jwbwrglzhk"
        target="_blank"
      >
        <span>ðŸ”‡ Not Playing Anything</span>
      </a>
    </div>
  ) : (
    <div class="flex flex-row items-center gap-4 mb-6">
      <a href={data.songUrl} target="_blank">
        <img
          alt={data.title}
          src={data.albumImageUrl}
          height={111}
          width={111}
          loading="eager"
          decoding="async"
        />
      </a>
      <div class="flex items-center">
        <span class="animate-spin mr-2">ðŸ’¿</span>
        <a href={data.songUrl} target="_blank" class="flex-1 min-w-0">
          <span class="block max-w-50 line-clamp-1 sm:max-w-lg sm:line-clamp-2">
            Playing <span class="font-bold">{data.title}</span> by
            <span class="font-bold">{data.artist}</span>
          </span>
        </a>
      </div>
    </div>
  )
}
